<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_centerHorizontal="true"
android:background="#f5f5f5"
android:orientation="vertical"
android:scrollbarAlwaysDrawVerticalTrack="true"
tools:context="com.enugusomlapp.enugusomlapp.SuccessChildFormActivity">

<TextView
    android:id="@+id/profile_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-90dp"
    android:layout_marginTop="25dp"
    android:text="@string/profiletitle"
    android:gravity="center"
    android:textColor="#030303"
    android:textSize="24sp"
    android:textStyle="bold" />
<TextView
    android:id="@+id/patientcode"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:textColor="#fa020a"
    android:textSize="28sp"
    android:gravity="center"
    android:textStyle="bold" />

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:background="#fafafa"
    android:orientation="vertical"
    android:padding="20dp"
    android:id="@+id/relativeLayout"
    android:layout_alignTop="@+id/patientcode"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/fullnames"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:textColor="#0e8905"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <!-- couple texts layout-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="#fafafa"
                android:orientation="horizontal">

                <!-- start text labbel-->
                <TextView
                    android:id="@+id/profiledatum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="#050505"
                    android:paddingBottom="15dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- couple texts layout-->
        </ScrollView>


        <!-- couple texts layout for main form-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <!-- start text labbel-->
            <TextView
                android:id="@+id/open_motherdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/openmotherddata"
                android:textColor="#ef9002"
                android:textSize="17sp"
                android:onClick="onClick"
                android:textStyle="bold" />
            <!-- end text value-->
            <TextView
                android:id="@+id/Editdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#061cc2"
                android:textSize="17sp"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:text="@string/editdata"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deldata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:clickable="true"
                android:text="@string/deldata"
                android:textColor="#df0303"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- couple texts layout for main form-->


        <!-- couple texts layout for main form-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Add_childvisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/addvisit"
                android:textColor="#03810a"
                android:textSize="17sp"
                android:layout_marginEnd="20sp"
                android:layout_marginRight="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/View_childvisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/viewvisit"
                android:textColor="#03810a"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>
        <!-- couple texts layout for main form-->
    </LinearLayout>
</RelativeLayout>

<ImageView
    android:id="@+id/user_profile_photoM"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:background="@drawable/user_profile_image_background"
    android:contentDescription="@string/successdesc"
    android:src="@mipmap/userm"
    android:visibility="gone"/>
<ImageView
    android:id="@+id/user_profile_photoF"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:background="@drawable/user_profile_image_background"
    android:contentDescription="@string/successdesc"
    android:src="@mipmap/userf"
    android:visibility="gone"/>
<ImageView
    android:id="@+id/user_profile_photoN"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:background="@drawable/user_profile_image_background"
    android:contentDescription="@string/successdesc"
    android:src="@mipmap/usericon"
    android:visibility="gone"/>

</RelativeLayout>