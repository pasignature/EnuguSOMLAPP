<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#faa519"
    tools:context="com.enugusomlapp.enugusomlapp.RegisterUpdateActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#faa519"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#e8e8e7"
            android:gravity="center">

            <TextView
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/registration"
                android:textColor="#2582C5"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#faa519"
            android:orientation="vertical">

            <TextView
                android:id="@+id/opcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textColor="#cf0306"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:hint="@string/sname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/sname"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/sname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/fname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/fname"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/fname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/onames"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/onames"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:maxLength="30"
                android:hint="@string/onames"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/dob"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/d_ob"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/dob"
                android:inputType="date"
                android:paddingLeft="5dp"
                android:onClick="onClick"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/sex_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/sex_gender"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/sex_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/sex_prompt"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/phone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/tel"
                android:inputType="number"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:maxLength="12"
                android:layout_marginTop="5dp"
                android:background="#f3f3f3"
                android:hint="@string/phone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/maritalstatus_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/maritalstatus"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/maritalstatus_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/maritalstatus_prompt"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/occupation"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/occupation"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/occupation"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/bloodgroup"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/bloodgroup"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/bloodgroup"
                android:maxLength="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="3"
                android:layout_marginTop="5dp"
                android:hint="@string/genotype"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/genotype"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/genotype"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/HIVstatus_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/HIVstatus"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/HIVstatus_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/HIVstatus_prompt"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/anyailment"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/ailment"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/anyailment"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <!--<ProgressBar
                android:id="@+id/progress_Bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/firstpregnancy_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/firstpregnancy"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/firstpregnancy_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/firstpregnancy_prompt"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/nochildren"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/children"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:inputType="number"
                android:maxLength="3"
                android:hint="@string/nochildren"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/normalbirth"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/normal_birth"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:inputType="number"
                android:maxLength="3"
                android:hint="@string/normalbirth"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/cesarean"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/cesarean_section"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:inputType="number"
                android:maxLength="3"
                android:hint="@string/cesarean"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/tbattendance"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/tb_attendance"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:inputType="number"
                android:maxLength="3"
                android:hint="@string/tbattendance"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/tbacontact"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/tb_contact"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#f3f3f3"
                android:maxLength="200"
                android:hint="@string/tbacontact"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/anyfamplanning_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/anyfamplanning"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/anyfamplanning_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/anyfamplanning_prompt"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/needfamplanning_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/needfamplanning"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/needfamplanning_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/needfamplanning_prompt"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#faa519"
            android:orientation="vertical">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/nokfullname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/nok_fullname"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/nokfullname"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/nokphone"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <EditText
                android:id="@+id/nok_tel"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="#f3f3f3"
                android:hint="@string/nokphone"
                android:inputType="number"
                android:maxLength="12"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:hint="@string/nokrelationship_prompt"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
            <Spinner
                android:id="@+id/nok_relationship"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:entries="@array/nokrelationship_array"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:prompt="@string/nokrelationship_prompt"
                android:spinnerMode="dropdown" />
        </LinearLayout>





        <!-- SUBMIT AND CANCEL BUTTONS SECTION-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--submit button -->
            <Button
                android:id="@+id/submit_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_xml_btn_green"
                android:onClick="onClick"
                android:text="@string/submitbtn"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--cancel button -->
            <Button
                android:id="@+id/cancel_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="120dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_xml_btn_red"
                android:onClick="onClick"
                android:text="@string/cancelbtn"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout >


    </LinearLayout>



</ScrollView>